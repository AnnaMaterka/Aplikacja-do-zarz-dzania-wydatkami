        </StackPanel>

        <DataGrid x:Name="dgUzytkownicy" AutoGenerateColumns="True" Width="318" Margin="10,42,472,346" />
        <DataGrid x:Name="dgKonta" AutoGenerateColumns="True" Height="47" Width="321" Margin="333,42,146,345" />
        <TextBlock Text="Suma pieniędzy:" Height="30" Width="280" Margin="10,88,510,316" />
        <TextBox x:Name="txtSumaPieniedzy" IsEnabled="False"  Height="30" Width="280" Margin="250,88,270,316" />


    </Grid>
</Window>
