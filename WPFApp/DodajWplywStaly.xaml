<Window x:Class="WPFApp.DodajWplywStaly"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="DodajWplywStaly" Height="450" Width="800">
    <Grid>
        <Grid>
            <StackPanel Margin="10">
                <Label Content="Kwota" />
                <TextBox x:Name="txtKwota" Text="{Binding Kwota}" Height="30" Width="380"/>

                <Label Content="Data początkowa" />
                <DatePicker x:Name="datePickerData" SelectedDate="{Binding DataPoczatkowa}" Height="30" Width="380"/>

                <Label Content="Kategoria" />
                <TextBox x:Name="txtKategoria" Text="{Binding Kategoria}" Height="30" Width="380"/>

                <Button Content="Dodaj Wplyw Staly" Click="DodajWplywStaly_Click" Height="30" Width="380" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
