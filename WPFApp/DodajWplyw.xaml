<Window x:Class="WPFApp.DodajWplyw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
            Title="DodajWplyw" Height="600" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Kwota" />
            <TextBox x:Name="txtKwota" Text="{Binding Kwota}" Height="30" Width="380"/>

            <Label Content="Data" />
            <DatePicker x:Name="datePickerData" SelectedDate="{Binding Data}" Height="30" Width="380"/>

            <Label Content="Wybierz kategorię" />
            <TextBox x:Name="txtKategoria" Text="{Binding Kategoria}" Height="30" Width="380"/>

            <!--<ComboBox x:Name="cbKategorie" Height="33" Width="380" DisplayMemberPath="NazwaKategorii" SelectedItem="{Binding WybranaKategoria}" />-->

            <Label Content="Wybierz konto" />
            <ComboBox x:Name="cbKonta" DisplayMemberPath="Nazwa" Height="33" Width="380" SelectedItem="{Binding WybraneKonto}" />

            <Button Content="Dodaj Wplyw" Click="DodajWplyw_Click" Height="30" Width="380" />
        </StackPanel>
    </Grid>
</Window>
