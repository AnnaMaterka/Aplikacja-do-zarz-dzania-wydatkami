<Window x:Class="WPFApp.DodajWydatek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="DodajWydatek" Height="318" Width="400">
    <Grid Background="#FF5E7E9E">
        <StackPanel Margin="10">
            <Label Content="Kwota" FontStyle="Italic" />
            <TextBox x:Name="txtKwota" Text="{Binding Kwota}" Height="30" Width="380" Background="{x:Null}"/>

            <Label Content="Data" FontStyle="Italic" />
            <DatePicker x:Name="datePickerData" SelectedDate="{Binding Data}" Height="30" Width="380"/>

            <Label Content=" Kategoria" FontStyle="Italic" />
            <TextBox x:Name="txtKategoria" Text="{Binding Kategoria}" Height="30" Width="380" Background="{x:Null}"/>

            <Label Content="Wybierz konto" FontStyle="Italic" />
            <ComboBox x:Name="cbKonta" DisplayMemberPath="Nazwa" Height="33" Width="380" SelectedItem="{Binding WybraneKonto}" />

            <Button Content="Dodaj Wplyw" Click="DodajWydatek_Click" Height="30" Width="380" Background="#FF5E7E9E" />
        </StackPanel>
    </Grid>
</Window>
